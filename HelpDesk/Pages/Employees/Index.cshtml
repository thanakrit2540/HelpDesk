    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<div class="card mb-3">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                       
                        <th>
                            @Html.DisplayNameFor(model => model.Employee[0].FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee[0].LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee[0].Gender)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee[0].Birthday)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee[0].Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee[0].Line)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee[0].Call)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee[0].Addr)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee[0].Image)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee[0].Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee[0].Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee[0].Employee_CompanyID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee[0].Employee_DepartmentID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee[0].Employee_LocationID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee[0].Employee_EmployeeTypeID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee[0].Employee_PositionID)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Employee)
                    {
                        <tr>
                           
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gender)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Birthday)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Line)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Call)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Addr)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Image)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Company.CompanyID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Department.DepartmentID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location.LocationID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmployeeType.EmployeeTypeID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Position.PositionID)
                            </td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.EmployeeID">Edit</a> |
                                <a asp-page="./Details" asp-route-id="@item.EmployeeID">Details</a> |
                                <a asp-page="./Delete" asp-route-id="@item.EmployeeID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </div>

